	<!-- This is a structMap with highly-typed div elements.  The div TYPEs tell us what kind of Fedora entity to map to,
	     	as well as the NARA Template types.  Note that for the div LABEL attribute, we use the original directory names
	     	for div elements that are aggregateTemplate types.  For div elements that represent documentTemplate types, 
	     	we carry over the 'RecTitle' metadata element from the metadata record that describes that document. -->
	<METS:structMap TYPE="windows directory structure">
		<!-- AGGREGATE TEMPLATE (for the ROOT of this SIP) - will be converted to a Fedora digital object-->
		<!-- Note we use the DMDID attribute on the root div to point to SIP metadata in the dmdSec -->
		<METS:div LABEL="DOD 5015" ORDER="1" TYPE="FedoraObject-aggregateTemplate" DMDID="DMD_SIP_Example">
			<!-- AGGREGATE TEMPLATE (for SERIES folder object)  - will be converted to a Fedora digital object-->
			<METS:div LABEL="SERIES 0031" ORDER="1" TYPE="FedoraObject-aggregateTemplate">
				<!-- DOCUMENT TEMPLATE  (for a record object) - wil be converted to a Fedora digital object -->
				<METS:div LABEL="Purchase Order" ORDER="1" TYPE="FedoraObject-documentTemplate">
					<!-- Parts of the record (content and metadata) - both will appear as Datastreams in a Fedora digital object-->
					<METS:div LABEL="Record Content" ORDER="1" TYPE="FedoraDatastream-recordContent">
						<METS:fptr FILEID="FILE-01"/>
					</METS:div>
					<METS:div LABEL="Record Metadata" ORDER="1" TYPE="FedoraDatastream-recordMetadata">
						<METS:fptr FILEID="FILE-01-META"/>
					</METS:div>
				</METS:div>
				<!-- AGGREGATE TEMPLATE (for SERIES SUB-folder object)  - will be converted to a Fedora digital object-->
				<METS:div LABEL="Hardware" ORDER="1" TYPE="FedoraObject-aggregateTemplate">
					<!-- DOCUMENT TEMPLATE  (for a record object) - wil be converted to a Fedora digital object -->
					<METS:div LABEL="Purchase Order" ORDER="1" TYPE="FedoraObject-documentTemplate">
						<!-- Parts of the record (content and metadata) - both will appear as Datastreams in a Fedora digital object-->
						<METS:div LABEL="Record Content" ORDER="1" TYPE="FedoraDatastream-recordContent">
							<METS:fptr FILEID="FILE-02"/>
						</METS:div>
						<METS:div LABEL="Record Metadata" ORDER="1" TYPE="FedoraDatastream-recordMetadata">
							<METS:fptr FILEID="FILE-02-META"/>
						</METS:div>
					</METS:div>
				</METS:div>
			</METS:div>
		</METS:div>
	</METS:structMap>
</METS:mets>

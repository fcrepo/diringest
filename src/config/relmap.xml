<?xml version="1.0" encoding="UTF-8"?>
<!--
  A relMap specifies a set of templates to be applied to matching
  "div" elements in a METS structMap.
  
  Each template applies to a particular node type in the structMap.
  A template specifies the relationships that should be inferred
  from the node of interest to other nodes in the hierarchy.

  The value of nodeType is a string indicating a div TYPE.
  If nodeType is unspecified, the template applies to all nodes.
  
  The value of kinType is one of the following:
  
    parent | ancestor | sibling | child | descendent
-->
<relMap>

  <!-- 
    This template specifies a "contains" relationship between
    a "folder" div and any child "file" div. 
  -->
  <template nodeType="folder">
    <relationship uri="urn:example:contains">
      <target kinType="child" nodeType="file"/>
    </relationship>
  </template>

  <!--
    This template specifies a "hasAncestor" relationship between
    any div and all of its ancestors, regardless of type.
  -->
  <template>
    <relationship uri="urn:example:hasAncestor">
      <target kinType="ancestor"/>
    </relationship>
  </template>
  
  <!--
    This template derives several job-related relationships from 
    a structMap that represents an org chart:
    
    company                
      division
        person
        person
        section
          person
          department
            person
              person
              person
  -->
  <template nodeType="person">
    <relationship uri="urn:example:supervises">
      <target kinType="child" nodeType="person"/>
    </relationship>
    <relationship uri="urn:example:memberOf">
      <target kinType="ancestor" nodeType="department"/>
      <target kinType="ancestor" nodeType="section"/>
      <target kinType="ancestor" nodeType="division"/>
    </relationship>
    <relationship uri="urn:example:employeeOf">
      <target kinType="ancestor" nodeType="company"/>
    </relationship>
  </template>
    
</relMap>
